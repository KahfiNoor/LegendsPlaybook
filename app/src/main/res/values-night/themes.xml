<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LegendsPlaybook" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="App.Theme.LegendsPlaybook" parent="Base.Theme.LegendsPlaybook" />

    <style name="Theme.SplashScreen" parent="App.Theme.LegendsPlaybook">
        <item name="windowSplashScreenBackground">@color/gray</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_app</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.LegendsPlaybook</item>
        <item name="windowSplashScreenIconBackgroundColor">@drawable/bg_legends_abilities</item>
    </style>
</resources>
